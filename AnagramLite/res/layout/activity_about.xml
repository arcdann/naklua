<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AboutActivity" >

    <LinearLayout
        android:id="@+id/aboutTopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/about_productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/about_versionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/single_space"
            android:layout_marginRight="@dimen/single_space"
            android:text="@string/about_version_title"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/about_versionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <Button
        android:id="@+id/about_button_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:background="@drawable/rect_button"
        android:maxWidth="360dp"
        android:minHeight="48dp"
        android:text="@string/button_txt_ok" />

    <TextView
        android:id="@+id/textDesignEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textDesignName"
        android:layout_alignBottom="@+id/textDesignName"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/textDesign"
        android:text="@string/design_email"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/aboutAuthorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aboutTopLayout"
        android:layout_below="@+id/aboutTopLayout"
        android:layout_marginTop="24dp"
        android:text="@string/author_txt" />

    <TextView
        android:id="@+id/author_txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aboutAuthorTitle"
        android:layout_below="@+id/aboutAuthorTitle"
        android:text="@string/author_name"
        android:textColor="@color/blue" />

    <ImageView
        android:id="@+id/imageLogoAtAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/about_button_ok"
        android:layout_alignRight="@+id/textDesignEmail"
        android:layout_marginBottom="43dp"
        android:contentDescription="@string/anagramLogo"
        android:scaleType="fitXY"
        android:src="@drawable/logo_at_about" />

    <TextView
        android:id="@+id/textDesign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/author_txt_id"
        android:layout_below="@+id/author_txt_id"
        android:layout_marginTop="6dp"
        android:text="@string/design_txt"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textDesignName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textDesign"
        android:layout_below="@+id/textDesign"
        android:text="@string/design_name"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/blue" />

</RelativeLayout>