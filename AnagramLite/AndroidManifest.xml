<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daniloff.adanagramlite"
    android:versionCode="4"
    android:versionName="1.03" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.daniloff.adanagramlite.EntryActivity"
            android:label="@string/app_name" >
            android:screenOrientation="portrait" >            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.daniloff.adanagramlite.FinishActivity"
            android:label="@string/title_activity_finish" >
        </activity>
        <activity
            android:name="com.daniloff.adanagramlite.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.daniloff.adanagramlite.RulesActivity"
            android:label="@string/title_activity_rules" >
        </activity>
        <activity
            android:name="com.daniloff.adanagramlite.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="com.daniloff.adanagramlite.ChoiceActivity"
            android:label="@string/title_activity_choice" >
        </activity>
    </application>

</manifest>